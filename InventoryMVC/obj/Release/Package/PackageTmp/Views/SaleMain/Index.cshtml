@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutTheme.cshtml";
}

@*<h2>Sale Product</h2>*@
<script src="~/ViewsScript/IndexSale.js"></script>

<section id="main-content">
    @*<section class="wrapper">*@
        <section class="panel">
            <div class="panel-body">
                <div role="tabpanel">
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="active"><a href="#blockstudent" aria-controls="home" role="tab" data-toggle="tab">Sale Product</a></li>

                        

                    </ul>
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane active" id="downloadstudentlist">
                            <div class="form-group">
                                <div class="col-md-12">
                                    @*<form class="navbar-form navbar-left" role="search">*@
                                    <label class="col-sm-2"> Search Product: </label>
                                    <div class="col-sm-4">
                                        <input type="number" id="data" class=" form-control" placeholder="Search">
                                    </div>
                                    <button class=" btn btn-primary" id="dSubmit" type='button'>Get Product</button>
                                    @*</form>*@
                                </div>

                                <div class="form-group">
                                    <div class="clearfix">
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="col-md-8">
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Sl.</th>
                                                    <th>Code</th>
                                                    <th>Product Name</th>
                                                    <th>Unit Price</th>
                                                    <th>Quantity</th>
                                                    <th>Total Price</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody id="tbodyid">
                                                <tr></tr>

                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-4">
                                            <br/><br/><br/><br/>
                                            <label class="control-label col-sm-4"> totalPrice:  </label>
                                            <div class="col-sm-8">
                                                <input readonly type="number" id="totalPrice" class=" form-control" placeholder="totalPrice">
                                                <br />
                                             </div>
                                            
                                            <label class="control-label col-sm-4"> tax:  </label>
                                            <div class="col-sm-8">
                                                <input type="number" id="tax" class=" form-control" placeholder="tax">
                                                <br/>
                                            </div>
                                            <label class="control-label col-sm-4"> discount:  </label>
                                            <div class="col-sm-8">
                                                <input type="number" id="discount" class=" form-control" placeholder="discount">
                                                <br />
                                            </div>
                                            <label class="control-label col-sm-4"> Adjustment:  </label>
                                            <div class="col-sm-8">
                                                <input type="number" id="adjustment" class=" form-control" placeholder="Adjustment">
                                                <br/>
                                            </div>
                                            <label class="control-label col-sm-4"> Grand Total:  </label>
                                            <div class="col-sm-8">
                                                <input readonly type="number" id="grandTotal" class=" form-control" placeholder="Grand Total">
                                                <br />sellSubmit
                                            </div>
                                           
                                           
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class=" col-md-offset-4 col-md-2">
                                        <button class=" btn btn-primary" id="sellSubmit" type='button'>Confirm Sell</button>
                                    </div>
                                </div>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </section>
    @*</section>*@
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <form class="form-horizontal" role="form">
            <!-- Modal content-->
            <div class="modal-content   ">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Modal Header</h4>
                </div>
                <div class="modal-body">
                    @*<p>Some text in the modal.</p>*@
                    @*<fieldset>*@
                    <div class="form-group">
                        @*<div class="col-sm-12">*@
                        <input hidden type="text" id="Id" class=" form-control" placeholder="Search">
                        <label class="control-label col-sm-1"> Code:  </label>
                        <div class="col-sm-3">
                            <input readonly type="text" id="loadProductCode" class=" form-control" placeholder="Search">
                        </div>
                        <label class="control-label col-sm-1"> Name:  </label>
                        <div class="col-sm-3">
                            <input readonly type="text" id="loadProductName" class=" form-control" placeholder="Search">
                        </div>
                        <label class="control-label col-sm-1"> Price:  </label>
                        <div class="col-sm-3">
                            <input readonly type="text" id="loadSellPrice" class=" form-control" placeholder="Search">
                        </div>
                        @*</div>*@
                    </div>

                    <div class="form-group">
                        @*<div class="col-sm-12">*@
                        <label class="control-label col-sm-1"> Tax: </label>
                        <div class="col-sm-3">
                            <input readonly type="text" id="loadTax" class=" form-control" placeholder="Search">

                        </div>
                        <label class="control-label col-md-offset-4 col-sm-1"> Quantity: </label>
                        <div class="col-sm-3">
                            <input type="text" id="productQuantity" class=" form-control" placeholder="Quantity">
                        </div>

                        @*</div>*@
                    </div>
                    <div class="form-group">



                        <label class="control-label col-md-offset-6 col-sm-3"> Total price of this Product:  </label>

                        <div class="col-sm-3">
                            <input type="text" id="totalForthisProduct" class=" form-control" placeholder="Search">
                        </div>

                    </div>
                    @*</fieldset>*@
                </div>
                <div class="modal-footer">
                    <button type="button" id="addToCart" class="btn btn-default" data-dismiss="modal">addToCart</button>
                </div>


            </div>
        </form>
    </div>
</div>
